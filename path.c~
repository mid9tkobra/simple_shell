#include <unistd.h>
#include <stdlib.h>
#include <string.h>
#include <sys/stat.h>
#include <sys/types.h>
#include <stdio.h>
int _check(char *buf)
{
	char buf2[1024], *buf3;
	struct stat st;
	int ch1, ch2, ch3, i = 0, count = 0;

	ch3 = strcmp(buf, "cd");
	if (ch3 == 0)
		return (3);
	ch2 = stat(buf, &st);
	if (ch2 == 0)
		return (2);
	buf3 = malloc(sizeof(char) *1024);
	strcpy(buf2, getenv("PATH"));
	strcat(buf2, ": ");
	while (buf2[i] != '\0')
	{
		if (buf2[i] == ':')
			count++;
		i++;
	}
	strcpy(buf2,  strtok(buf2, ":"));
	while (--count)
	{
		strcpy(buf3, buf2);
		strcat(buf3, "/");
		strcat(buf3, buf);
		ch1 = stat(buf3, &st);
		if (ch1 == 0)
		{
			strcpy(buf, buf3);
			printf("buf3 : %s---buf : %s", buf3, buf);
			free(buf3);
			return (1);
		}
		strcpy(buf2, strtok(NULL, ":"));
	}
	free(buf3);
	return (0);
}
